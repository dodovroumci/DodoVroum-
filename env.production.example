# Configuration de production pour DodoVroum Backend

# Environnement
NODE_ENV=production
PORT=3000

# Base de données
DATABASE_URL=postgresql://postgres:your_secure_password@localhost:5432/dodo_vroum_prod

# Cache Redis
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Logging
LOG_LEVEL=info

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_ENABLED=true

# Sécurité
BCRYPT_ROUNDS=12
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# Email (pour les notifications futures)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password

# Upload de fichiers
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Monitoring externe
SENTRY_DSN=your_sentry_dsn_here
SNYK_TOKEN=your_snyk_token_here

# Grafana
GRAFANA_PASSWORD=your_grafana_admin_password

# PostgreSQL
POSTGRES_PASSWORD=your_secure_postgres_password
